{
	"env": {
		"node": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"globals": {},
	"rules": {
		"camelcase": 2,
		"comma-spacing": 0,
		"quotes": [ 0, "single" ],
		"new-cap": 0,
		"no-extend-native": 0,
		"no-multi-spaces": 0,
		"no-undef": 2,
		"no-unused-vars": [ 2, { "vars": "local", "args": "none" } ],
		"space-infix-ops": 0,
		"strict": 0,
		"space-in-parens": [ 2, "always", { "exceptions": [ "{}", "empty" ] } ],
		"array-bracket-spacing": [ 2, "always", { "singleValue": false, "arraysInArrays": false, "objectsInArrays": false } ],
		"computed-property-spacing": [ "error", "always" ],
		"object-curly-spacing": [ "error", "always", { "objectsInObjects": false, "arraysInObjects": false } ]
	},
	"parserOptions": {
		"ecmaVersion": 6,
		"ecmaFeatures": {
			"jsx": true,
			"arrowFunctions": true,
			"modules": true
		},
		"sourceType": "module"
	}
}
